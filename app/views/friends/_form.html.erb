<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="container p-3">
    <div class="form-group mb-3 w-50">
      <%= form.number_field :user_id, class: "form-control",id: "friend_user_id", type: :hidden, placeholder: "User Id", value: current_user.id %>
      <%# "current_user.id is from devise gem that gives us the current user's id" %>
    </div>
    <div class="form-group mb-3 w-50">
      <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.text_field :phone, class: "form-control", placeholder: "Phone no." %>
    </div>

    <div class="form-group mb-3 w-50">
      <%= form.text_field :twitter, class: "form-control", placeholder: "Twitter" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-secondary mt-3" %>
    </div>
  </div>

<% end %>
